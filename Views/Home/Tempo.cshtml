@model Minhalabcompras.Models.WeatherApiResponse
@{
    ViewData["Title"] = "Tempo";
}
<h1>@ViewData["Title"]</h1>

<form asp-action="Tempo" method="post">
    <div asp-validation-summary="All"></div>
    <label asp-for="Location.Name">Localidade</label>
    <input type="text" asp-for="Location.Name" />

    <button class="alert" type="submit">Ver tempo</button>
</form>

<div><img src="@Model.Current.WeatherIcons[0]" /></div>
<br />
<p><strong>País:</strong> @Model.Location.Country    <strong>Cidade:</strong> @Model.Location.Name</p>
<p><strong>Temperatura:</strong>Estão @Model.Current.Temperature Graus</p>

<br />
<p><strong>Data e Hora: </strong>@Model.Location.Localtime</p>
<br />
