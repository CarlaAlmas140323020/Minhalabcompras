@model Minhalabcompras.Models.ContaBancaria
@{
    ViewData["Title"] = "Nova Conta Bancária";
}


<card class="card">
    <div class="card-body alert-info">
        <h1 class="alert-danger">Nova Conta Bancária Criada</h1>
        <p><strong>Nome do Titular:</strong> @Model.NomeDoTitular</p>
        <p><strong>Saldo:</strong> @Model.Saldo</p>
        <p>
            <strong>Conta Ativa:</strong>
            @if (Model.Ativa == true)
            {
                @:Sim
            }
            else
            {
                @:Não
            }
        </p>
    </div>
</card>
<br />

<p><a asp-controller="ContaBancaria" asp-action="Conta">Adicionar nova conta Bancária</a></p>
<br/>
<p><a asp-action="Index" asp-action="ContaBancaria" class=" alert">Contas Bancárias Criadas</a></p>
