@model List<Produto>
  @{
      ViewData["Title"] = "Produtos";
}

<div class="text-center">

    @if (Model.Count == 0)
    {
        <h1>Sem Produtos</h1>
    }
  
    else
    {

        <h2>Produtos</h2>

        @foreach (Produto p in Model)
        {
            <div class=" card bg-light mb-3">
                <div class="card-body">
                    <strong>Id:</strong>@p.ID
                    <strong>Nome:</strong>@p.Nome
                    <strong>Categoria:</strong>@p.Categoria
                    <strong>Preço:</strong>@p.Preco
                    <strong>Em Stock:</strong>
                    @if (@p.EmStock == true)
                    {
                        @:Sim
                    }
                    else
                    {
                        @:Não
                    }


                </div>
            </div>
        }
    }
</div>
<a asp-action="NovoProduto" asp-controller="Produtos" class="btn-primary">Adicionar Produto <i class="glyphicon glyphicon-plus"></i></a>